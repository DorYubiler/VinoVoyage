

@{
    ViewBag.Title = "AdminHomePage";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">


</head>
<body>

    <div class="topnav">
        <a href="#vinoVoyage" class="left">VINOVOYAGE</a>
        <div class="dropdown">
            <button class="dropbtn" onclick="DropDownFuncTopNav()">
                Hey,@ViewBag.Username
                <i class="fa fa-caret-down"></i>
            </button>
            <div class="dropdown-content" id="TopNavDropdown">
                <a href="@Url.Action("HomePage", "Home")">Logout</a>


            </div>
        </div>
    </div>


    <div class="sidenav">

        <button class="dropdown-btn">
            User manegmenet
            <i class="fa fa-caret-downSide"></i>
        </button>
        <div class="sidedropdown-container">
            <a href="#">Add/remove users</a>
            <a href="#">Manege users</a>

        </div>
        <button class="dropdown-btn">
            Product manegmenet
            <i class="fa fa-caret-downSide"></i>
        </button>
        <div class="sidedropdown-container">
            <a href="#">Add/remove product</a>
            <a href="#">Manege product</a>
            <a href="#">Order products</a>
            <a href="#">Order new product</a>

        </div>
    </div>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var dropdownBtns = document.getElementsByClassName("sidedropdown-container");

            Array.from(dropdownBtns).forEach(function (button) {
                button.addEventListener("click", function (event) {
                    // Toggle the dropdown visibility only if the clicked element is the button itself
                    var dropdownContent = this.nextElementSibling;
                    if (dropdownContent.style.display === "none" || dropdownContent.style.display === "") {
                        dropdownContent.style.display = "block";
                    } else {
                        dropdownContent.style.display = "none";
                    }
                });
            });
        });
    </script>
    
    <!-- Page content -->
    <div class="content">
        <div id="addProducts" style="display:none;">
            <!-- Content for adding products -->
            <p>Add products here...</p>
        </div>
        <div id="removeProducts" style="display:none;">
            <!-- Content for removing products -->
            <p>Remove products here...</p>
        </div>
    </div>



    <script src="../UI/JS/ShowDiv.js"></script>

</body>
</html>
