@model VinoVoyage.Models.UserModel


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>VinoVoyage</title>
    <link rel="stylesheet" href="~/UI/css/Style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <style>
        .popup {
            display: none; /* Ensure it's hidden by default */
            /* Add more styling as necessary */
        }
    </style>
</head>
<body>
    <!-- top navigation bar -->
    <div class="topnav" id="myTopnav">
        <a href="#vinoVoyage"><i class="fa fa-home"></i> VINOVOYAGE</a>
        <a onclick="toggleSignupPopup()"><i class="fa fa-user-plus"></i> REGISTER</a>
        <a onclick="togglePopup()"><i class="fa fa-sign-in"></i> LOGIN</a>
        <a onclick="startCustogglePopup('guestConPopup')"> CONTINUE AS GUEST</a>
        <a href="#wishlist"><i class="fa fa-heart"></i></a>
        @*<input type="text" placeholder="SEARCH...">*@
    </div>
    @* -----------confirm guest-------------------*@
    <div id="guestConPopup" class="popup">
        <span onclick="document.getElementById('guestConPopup').style.display='none'" class="close" title="Close Modal">&times;</span>
        <p>You better signup. Come be Part of the Vvoyage</p>
        <button href="@Url.Action("LoginGuest","User")">Prefer to stay guest </button>
        <button onclick="toggleSignupPopup()">SignUp now!</button>
    </div>

    <!-- photo slideshow -->
    <div class="slideshow-container">
        <div class="mySlides fade">
            <div class="numbertext">1 / 3</div>
            <div class="element">
                <img src="~/UI/img/slideshow/hebrewmistakes.jpeg" alt="Slide Image">
                <div class="slideText">VINO VOYAGE for IDF!</div>
            </div>

        </div>
        <div class="mySlides fade">
            <div class="numbertext">2 / 3</div>
            <div class="element">
                <img src="~/UI/img/slideshow/rose.jpeg" style="width:100%">
                <div>On wednesday we wear pink</div>
            </div>
        </div>
        <div class="mySlides fade">
            <div class="numbertext">3 / 3</div>
            <div class="element">
                <img src="~/UI/img/slideshow/vinowine2.jpeg" style="width:100%">
                <div>Try our private collection</div>
            </div>
        </div>

        <!-- Next and previous buttons -->
        <a class="prev" onclick="plusSlides(-1)">&#10094;</a>
        <a class="next" onclick="plusSlides(1)">&#10095;</a>
        <br />

        <!-- The dots/circles -->
        <div style="text-align:center">
            <span class="dot" onclick="currentSlide(1)"></span>
            <span class="dot" onclick="currentSlide(2)"></span>
            <span class="dot" onclick="currentSlide(3)"></span>
        </div>
    </div>
    <br>

    <div id="LoginConfPopup" class="popup">
        <span onclick="document.getElementById('LoginConfPopup').style.display='none'" class="close" title="Close Modal">&times;</span>
        <p>Welcome back to VV </p><i class="fa fa-heart"></i>
    </div>
    <div id="loginPopup" class="popup">
        <span onclick="document.getElementById('loginPopup').style.display='none'" class="close" title="Close Modal">&times;</span>
        @using (Html.BeginForm("Login", "User", FormMethod.Post, new { @id = "loginForm", }))
        {
            <h1>VINOVOYAGE</h1>
            <h2>LOGIN TO JOIN OUR VOYAGE</h2>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <p>USERNAME</p>
                <input type="text" id="username" name="UserName" placeholder="" required />
            </div>
            <div class="form-group">
                <p>PASSWORD</p>
                <input type="password" id="password" name="Password" placeholder="" required />
            </div>
            <button class="popUpButton" id="showLoginForm" type="submit">Login</button>
        }
        <div id="LoginValidationErrors"></div>
    </div>

    <div id="SignUConfPopup" class="popup">
        <span onclick="document.getElementById('SignUConfPopup').style.display='none'" class="close" title="Close Modal">&times;</span>
        <p>Thank you for joining us, soon we will start our voyage</p>
    </div>

    <div id="SignupPopup" class="popup">
        <span onclick="document.getElementById('SignupPopup').style.display='none'" class="close" title="Close Modal">&times;</span>
        @using (Html.BeginForm("SignUp", "User", FormMethod.Post, new { @id = "signupForm" }))
        {
            <h1> VINOVOYAGE </h1>
            <h2> LOGIN TO JOIN OUR VOYAGE</h2>
            <div class="form-group">
                <p>Username</p>
                <input type="text" id="Regusername" name="UserName" placeholder="" required />
            </div>
            <div class="form-group">
                <p>Password</p>
                <input type="password" id="Regpassword" name="Password" placeholder="" required />
            </div>
            <div class="form-group">
                <p>Email</p>
                <input type="email" id="Regemail" name="Email" placeholder="example@gmil.com" required />
            </div>
            <button class="popUpButton" type="submit">Signup</button>
        }
        <div id="registervalidationErrors"></div>
    </div>

    <div id="welcomePopup" class="popup" >
        <span onclick="document.getElementById('welcomePopup').style.display='none'" class="close" title="Close Modal">&times;</span>
        <p>Welcome to VinoVoyage. Please verify you are above legal drinking age to enter.</p>
        <button onclick="redirectToBlank()">I haven't turned 18 yet</button>
        <button onclick="console.log('Welcome in!'); getIn()">I'm over 18. Let's go!</button>
    </div>




    <div id="bthn" lang="en"></div>
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/UI/JS/HomePagejs.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

</body>
</html>