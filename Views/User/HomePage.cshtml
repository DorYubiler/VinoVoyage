@model VinoVoyage.Models.UserModel


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>VinoVoyage</title>
    <link rel="stylesheet" href="~/UI/css/Style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <style>
        .popup {
            display: none; /* Ensure it's hidden by default */
            /* Add more styling as necessary */
        }
    </style>
</head>
<body>
    <!-- top navigation bar -->
    <div class="topnav" id="myTopnav">
        <a href="@Url.Action("HomePage","User")"><i class="fa fa-home"></i> VINOVOYAGE</a>
        <a onclick="toggleSignupPopup()"><i class="fa fa-user-plus"></i> REGISTER</a>
        <a onclick="togglePopup()"><i class="fa fa-sign-in"></i> LOGIN</a>
        <a onclick="startCustogglePopup('guestConPopup')"> CONTINUE AS GUEST</a>

    </div>
    <div id="LoginConfPopup" class="popup" style="width:600px;">
        <span onclick="document.getElementById('LoginConfPopup').style.display='none'" class="close" title="Close Modal">&times;</span>
        <p>Welcome back to VV </p><i class="fa fa-heart"></i>
    </div>
    <div id="loginPopup" class="popup">
        <span onclick="document.getElementById('loginPopup').style.display='none'" class="close" title="Close Modal">&times;</span>
        @using (Html.BeginForm("Login", "User", FormMethod.Post, new { @id = "loginForm", }))
        {
            <div class="popup-container">
                <div class="popup-colCenter">
                    <div class="titles" style="text-align:start;">VINOVOYAGE</div>
                    <h3>login</h3>
                    <h3></h3>
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="hometTitles">USERNAME</div>
                    <input type="text" id="username" name="UserName" placeholder="" required />
                    <div class="hometTitles">PASSWORD</div>
                    <input type="password" id="password" name="Password" placeholder="" required />
                    <button class="popUpButton" id="showLoginForm" type="submit" style="margin: 13px 0 0 0;">Login</button>
                    <div id="LoginValidationErrors" class="errorMsg"></div>
                </div>
            </div>
        }
    </div>
    @* -----------confirm guest-------------------*@
    <div id="guestConPopup" class="popup" style="width:600px;">
        <span onclick="document.getElementById('guestConPopup').style.display='none'" class="close" title="Close Modal">&times;</span>
        <p>You better signup. Come be Part of the Vvoyage</p>
        <button onclick="gotoGuest()">Prefer to stay guest </button>
        <button onclick="toggleSignupPopup()" style="width:40%; margin-left:30px;">SignUp now!</button>
    </div>
    <div id="SignUConfPopup" class="popup" style="width:600px;">
        <span onclick="document.getElementById('SignUConfPopup').style.display='none'" class="close" title="Close Modal">&times;</span>
        <p>Thank you for joining us, soon we will start our voyage</p>
    </div>
    <div id="SignupPopup" class="popup">
        <span onclick="document.getElementById('SignupPopup').style.display='none'" class="close" title="Close Modal">&times;</span>
        @using (Html.BeginForm("SignUp", "User", FormMethod.Post, new { @id = "signupForm" }))
        {
            <div class="popup-container">
                <div class="popup-colCenter">
                    <div class="titles" style="text-align:start;">VINOVOYAGE</div>
                    <h3>start your voyage with us</h3>
                    <div class="hometTitles">USERNAME</div>
                    <input type="text" id="Regusername" name="UserName" placeholder="3-10 characters" required />
                    <div class="hometTitles">PASSWORD</div>
                    <input type="password" id="Regpassword" name="Password" placeholder="6-10 characters" required />
                    <div class="hometTitles">Email</div>
                    <input type="email" id="Regemail" name="Email" placeholder="example@gmail.com" required />
                    <button class="popUpButton" type="submit" style="margin: 13px 0 0 0;">Signup</button>
                    <div id="registervalidationErrors" class="errorMsg"></div>
                </div>
            </div>
        }
    </div>
    <div class="window">
        <div class="homepage-container">
            <!-- photo slideshow -->
            <div class="slideshow-container">
                <div class="mySlides fade">
                    <div class="numbertext">1 / 3</div>
                    <div class="element">
                        <img src="~/UI/img/slideshow/hebrewmistakes.jpeg" alt="Slide Image">
                    </div>

                </div>
                <div class="mySlides fade">
                    <div class="numbertext">2 / 3</div>
                    <div class="element">
                        <img src="~/UI/img/slideshow/rose.jpeg">
                    </div>
                </div>
                <div class="mySlides fade">
                    <div class="numbertext">3 / 3</div>
                    <div class="element">
                        <img src="~/UI/img/slideshow/vinowine2.jpeg">
                    </div>
                </div>

                <!-- Next and previous buttons -->
                <a class="prev" onclick="plusSlides(-1)">&#10094;</a>
                <a class="next" onclick="plusSlides(1)">&#10095;</a>
                <br />

                <!-- The dots/circles -->
                <div style="text-align:center">
                    <span class="dot" onclick="currentSlide(1)"></span>
                    <span class="dot" onclick="currentSlide(2)"></span>
                    <span class="dot" onclick="currentSlide(3)"></span>
                </div>
            </div>
            <br>
            <div class="homegap"></div>
            <div class="home-content">
                <div class="home-text-content">vino voyage king's collection</div>

                <div class="first-content">
                    <div class="home-prodCard">
                        <div class="imageContainer">
                            <img src="~/UI/img/wines/Davids Son2.jpg" alt="wine" style="width:100%" class="prodImage" />
                        </div>

                        <div class="prodDesctiption">
                            <h1>Davids son</h1>
                        </div>
                    </div>
                    <div class="home-prodCard">
                        <div class="imageContainer">
                            <img src="~/UI/img/wines/Davids Son2.jpg" alt="wine" style="width:100%" class="prodImage" />
                        </div>

                        <div class="prodDesctiption">
                            <h1>Davids son</h1>
                        </div>
                    </div>
                    <div class="home-prodCard">
                        <div class="imageContainer">
                            <img src="~/UI/img/wines/Davids Son2.jpg" alt="wine" style="width:100%" class="prodImage" />
                        </div>

                        <div class="prodDesctiption">
                            <h1>Davids son</h1>
                        </div>
                    </div>
                </div>
                <div class="homegap"></div>
                <div class="first-contentTransperent">
                    <div class="home-descriptionContainer">
                        <div class="home-text-content" style="background-color:transparent; color:black;">we stand with IDF</div>
                        <div class="home-description">With every purchase made by an IDF reservist we'll include an additional bottle of wine from us!<br>to redeem this special offer, simply place your order as usual, and we'll take care of the rest. Cheers to you, our heroes!</div>
                    </div>
                    <div class="home-description">
                        <img src="~/UI/img/home/isr-soldier.jpg" alt="soldier" class="content-img" />
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div id="welcomePopup" class="popup" style="width:600px;">
        <span onclick="document.getElementById('welcomePopup').style.display='none'" class="close" title="Close Modal">&times;</span>
        <p>Welcome to VinoVoyage. Please verify you are above legal drinking age to enter.</p>
        <button onclick="redirectToBlank()">I haven't turned 18 yet</button>
        <button onclick="getIn()" style="width:40%; margin-left:30px;">I'm over 18. Let's go!</button>

    </div>




    <div id="bthn" lang="en"></div>
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/UI/JS/HomePagejs.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

</body>
</html>